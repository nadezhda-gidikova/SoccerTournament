@using SoccerTournament.Data.Models
@model SoccerTournament.Models.Competition.CompetitionFormModel


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post" action="Create">
            
             <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Games"></label>
                
                <select multiple="multiple" class="multi-select" id="my_multi_select1" asp-for="@Model.GamesSelectList" asp-items="(List<SelectListItem>)ViewBag.games"></select>
                    
            </div>
            <hr />
            <input type="submit" class="btn btn-dark" value="Create" />


        </form>
    </div>
</div>
<br />
<hr />
@section Scripts {
<partial name="_ValidationScriptsPartial" />

}