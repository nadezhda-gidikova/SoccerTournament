@model SoccerTournament.Models.Competition.CompetitionListViewModel

@{
    ViewBag.Title = "Competitions";
}
<h1 class="text-white-50">@this.ViewData["Title"]</h1>
<hr />


<section>
    <div class="row">

        @foreach (var player in @Model.Competitions)
        {
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div>
                    <h4 class="card-title">@player.Name</h4>
                    <a asp-area="" asp-controller="Competitions" asp-action="GetById" asp-route-id="@player.Id" class="btn btn-primary">See Info</a>
                </div>
            </div>
        }
    </div>


</section>
