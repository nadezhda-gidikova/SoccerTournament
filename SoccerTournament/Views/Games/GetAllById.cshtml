@model SoccerTournament.Models.Game.GameListViewModel

@{
    ViewBag.Title = "Games";
}
<h1 class="text-white-50">@this.ViewData["Title"]</h1>
<hr />


<section>
    <div class="row">

        @foreach (var player in @Model.Games)
        {
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card" style="width:400px">
                    <img class="card-img-top" src="@player.Name" alt="@player.Name">
                    <div class="card-body">
                        <h4 class="card-title">@player.Name</h4>

                        <a asp-area=""asp-controller="Games" asp-action="GetById" asp-route-id="@player.Id" class="btn btn-primary">See Info</a>
                    </div>
                </div>
            </div>
        }
    </div>


</section>
