@using SoccerTournament.Data.Models
@model SoccerTournament.Models.Team.TeamFormModel


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post" action="Create">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" placeholder="Country">
                <span asp-validation-for="Country" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emblem"></label>
                <input asp-for="Emblem" class="form-control" placeholder="Picture URL">
                <span asp-validation-for="Emblem" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CoachId"></label>
                <select asp-for="CoachId" class="form-control">
                    @foreach (var coach in Model.Coaches)
                    {
                        <option value="@coach.Id">@coach.FullName</option>
                    }
                </select>
                <span asp-validation-for="CoachId" class="small text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Players"></label>
                
                <select multiple="multiple" class="multi-select" id="my_multi_select1" asp-for="@Model.PlayersSelectList" asp-items="(List<SelectListItem>)ViewBag.players"></select>
                    
            </div>
            <hr />
            <input type="submit" class="btn btn-dark" value="Create" />


        </form>
    </div>
</div>
<br />
<hr />
@section Scripts {
<partial name="_ValidationScriptsPartial" />

}